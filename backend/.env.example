# Server Configuration
PORT=8000

# Database
DATABASE_URL=host=localhost port=5432 user=postgres password=postgres dbname=clinical_trials sslmode=disable

# AI Model Configuration
# Format: "provider:model-name"
# Examples:
#   OpenAI: "openai:gpt-4", "openai:gpt-4-turbo", "openai:gpt-3.5-turbo", "openai:gpt-4o"
#   Anthropic: "anthropic:claude-3-5-sonnet-20240620", "anthropic:claude-3-opus-20240229"
# See: https://ai.pydantic.dev/models/
AI_MODEL=openai:gpt-4

# Optional: Fallback model if primary fails
# AI_FALLBACK_MODEL=anthropic:claude-3-5-sonnet-20240620

# API Keys (provide the key for your chosen model provider)
# OpenAI API Key (required if using OpenAI models)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (required if using Anthropic/Claude models)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# MCP Servers
MCP_DATABASE_PATH=../mcp-servers/database/mcp-database
MCP_FILESYSTEM_PATH=../mcp-servers/filesystem/mcp-filesystem
MCP_EXTERNAL_API_PATH=../mcp-servers/external-api/mcp-external-api

# Encryption
ENCRYPTION_KEY=change-this-to-a-secure-32-byte-key-in-production
